    .div1 {
        width: 100%;
        height: 120px;
        border: 2px solid #ffffff;
        background-color: white;
    }

    .img1 {
        border: solid;
        border-color: black;
        margin: 5px;
        border-width: 3px;
        width: 69px;
        height: 115px;
    }
</style>



