@using VisionMelbourneV3.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<link href="~/assets/style.css" rel="stylesheet" />
<link href="~/Content/style.css" rel="stylesheet" />



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Log in</title>
</head>
<div class="page-header">
    <div class="container">
        <div class="breadcrumbs">
            <ul class="list-unstyled">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>Log In</li>
            </ul>
        </div> <!-- end .breadcrumbs -->
    </div> <!-- end .container -->
</div>

<div class="section small transparent dark text-center" style="background-image: url('../../images/background.jpg');">
    <div class="inner">

        <div class="row">
            <div class="col-sm-4 col-sm-offset-4 form-box">
                <div class="form-top">
                    <div class="form-top-left">
                        <div class="frame">
                            <div class="zoom">
                                <h3 style="color:white">Log in to MelEyes</h3>
                            </div>
                        </div>
                        <div class="frame">
                            <div class="zoom">
                                <p>Enter your email and password to log in:</p>
                            </div>
                        </div>
                    </div>

                    <div class="form-top-right">
                        <div class="frame">
                            <div class="zoom" style="font-size:66px">
                                <i class="fa fa-lock"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-bottom">
                    <section id="loginForm">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <div class="frame">
                                    <div class="zoom">
                                        @Html.LabelFor(m => m.Email, new { @class = "col-md-12" })
                                        <div class="col-md-12">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="frame">
                                    <div class="zoom">
                                        @Html.LabelFor(m => m.Password, new { @class = "col-md-12" })
                                        <div class="col-md-12">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-1 col-md-11">
                                    <div class="frame">
                                        <div class="zoom">
                                            <div class="checkbox">
                                                @Html.CheckBoxFor(m => m.RememberMe)
                                                @Html.LabelFor(m => m.RememberMe, new { @style = "color:white" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-3 col-md-6">
                                    <div class="frame">
                                        <div class="zoom">
                                            <input type="submit" value="Log in" class="button" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="frame">
                                    <div class="zoom">
                                        <div class="col-md-12" style="text-align:center">
                                            <p>
                                                New to MelEyes? @Html.ActionLink("Join us Now", "Register")
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

